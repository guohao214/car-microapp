                }                
            }  
            .car-title .desc {
                color:#d43030;
                font-size:11px;
                margin-left:20rpx
            }
            .car-title .title {
                color:#000000;
                margin:10rpx 30rpx 10rpx 20rpx;
                font-size:14px;
            }   
        }
    }
    .line{
        height:1px; 
        background:rgb(172, 169, 169);        
    }
    .line-margin{
        margin-left: 15px;
        margin-right: 15px;
    }
    .years-list{
        margin:25rpx 25rpx 5rpx 25rpx;
        border-bottom:solid 1px #ddd;
        padding-bottom:25rpx;

        .item{
            /* width:120rpx; */
