    $activecolor: #13b113;
    .detail{
        background: #ffffff;
        .group-buy{
            margin:20rpx 20rpx 20rpx 20rpx;
            padding:20rpx 20rpx 20rpx 20rpx;
            border:0.5px #e5e5e5 solid;
            height:190rpx;
            font-size:13px;

            
            .img{
                float:left;
                position:relative;

                image{
                    width:250rpx;
                    height:190rpx;
                    float:left;
                    display:block;
                }

                .car-num{
                    position:absolute;
                    bottom:0;
                    height:15px;
                    width:38px;
                    background-color:#fff;
                    right:0;
                    overflow:hidden;
                    font-size:10px;
                    opacity:0.7;
                    color: black;
                    text-align: center;
                } 
            }

                       
            .content{
                margin-left:280rpx;
                .title{
                    color:#d43030;
                }
                .desc{
                    font-size:11px;
                }
                .btn{
                    color:white;
